engthScore":3},{"id":"https://genegraph.clinicalgenome.org/r/9158c2a6-f11b-47b4-ac7d-45471f7255a1_ad_other_el","type":"EvidenceLine","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/6faa5109-e2f1-4f35-8245-cd474970d6c8_proband_score_evidence_line","type":"EvidenceLine","dc:description":"Variant is absent from gnomAD. Variant score is upgraded to 1 point for convincing evidence of gain-of-function mechanism of disease.","calculatedScore":0.5,"direction":"Supports","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/3b4997e7-b41b-4ca1-9a2d-b8e0bdcaf88e"}],"specifiedBy":"GeneValidityProbandADNonNullCriteria","strengthScore":1}],"specifiedBy":"GeneValidityOverallAutosomalDominantOtherVariantEvidenceCriteria","strengthScore":1},{"id":"https://genegraph.clinicalgenome.org/r/9158c2a6-f11b-47b4-ac7d-45471f7255a1_ad_null_el","type":"EvidenceLine","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/2078af90-694a-4fa9-8944-71cfae72dd5f_proband_score_evidence_line","type":"EvidenceLine","dc:description":"Variant is absent from gnomAD. Variant was downgraded because the variant occurs in the second to last exon, and is therefore predicted to not undergo NMD, however it removes ~19% of the protein, including an important coiled-coil domain.","calculatedScore":1.5,"direction":"Supports","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/b700f566-797e-4ed8-a1ef-80629e27b2c4"}],"specifiedBy":"GeneValidityProbandADNullCriteria","strengthScore":1}],"specifiedBy":"GeneValidityOverallAutosomalDominantNullVariantEvidenceCriteria","strengthScore":1}],"specifiedBy":"GeneValidityOverallGeneticEvidenceCriteria","strengthScore":5},{"id":"https://genegraph.clinicalgenome.org/r/9158c2a6-f11b-47b4-ac7d-45471f7255a1_experimental_evidence_line","type":"EvidenceLine","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/9158c2a6-f11b-47b4-ac7d-45471f7255a1_functional_evidence_line","type":"EvidenceLine","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/5c512428-4cde-41ca-ae18-fe1d10a43187","type":"EvidenceLine","calculatedScore":0.5,"direction":"Supports","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/c8cac8c8-3353-4169-a03f-1628c774ab66","type":"Finding","dc:description":"Immunolabeling whole mount P2 mouse cochlea with HOMER2 antibody showed enriched expression in IHC and OHC stereocilia tips. A separate experiment showed p.Arg185Pro did not affect subcellular localization of HOMER2.","dc:source":"https://pubmed.ncbi.nlm.nih.gov/25816005","rdfs:label":"Azaiez Expression","demonstrates":{"id":"cg:GeneExpressionA"}}],"specifiedBy":"GeneValidityGeneExpressionCriteria","strengthScore":0.5},{"id":"https://genegraph.clinicalgenome.org/r/648e2ecc-727b-4d09-a9ec-b60263ef00a6","type":"EvidenceLine","calculatedScore":0.5,"direction":"Supports","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/0867c0c8-ffe3-456e-8def-388d4173e2dc","type":"Finding","dc:description":"Studied the multimerization of exogenous HOMER2 in HEK293T. In HOMER2-WT and HOMER2-Arg185Pro co-transfected cells, multimers were observed. In the HOMER2-WT and HOMER2-del co-transfected cells, the homo-multimerization of HOMER2-WT was slight at around 200kDa and the ability of HOMER2-del to multimerize was decreased more significantly. Multimerization of HOMER2-del was also decreased in HEI-OC1 cells.","dc:source":"https://pubmed.ncbi.nlm.nih.gov/30047143","rdfs:label":"Lu Multimerization","demonstrates":{"id":"obo:MI_0915"}}],"specifiedBy":"GeneValidityProteinInteractionCriteria","strengthScore":0.5}],"specifiedBy":"GeneValidityOverallFunctionalEvidenceCriteria","strengthScore":1},{"id":"https://genegraph.clinicalgenome.org/r/9158c2a6-f11b-47b4-ac7d-45471f7255a1_functional_alteration_evidence_line","type":"EvidenceLine","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/cd8a3a43-ddaf-4aae-87ed-bfc7e0cf749d","type":"EvidenceLine","calculatedScore":0.5,"direction":"Supports","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/8970d1b2-0713-4bfa-bea3-44530dbeb06e","type":"FunctionalAlteration","dc:description":"Transfected HEK293T and HEI-CO1 cells with HOMER2: WT and the two variants. In HEI-OC1, HOMER2-WT aggregates near nucleus in cytoplasm, but HOMER2-dup is distributed more diffusely. Similar results seen in HEK293T cells. HOMER2-Asp185Pro proteins are similar to HOMER2-WT in HEK29T cells.","dc:source":"https://pubmed.ncbi.nlm.nih.gov/30047143","rdfs:label":"Lu Non-Patient Cells"}],"specifiedBy":"GeneValidityNonPatientCellFunctionalAlterationCriteria","strengthScore":0.5}],"specifiedBy":"GeneValidityOverallFunctionalAlterationEvidenceCriteria","strengthScore":0.5},{"id":"https://genegraph.clinicalgenome.org/r/9158c2a6-f11b-47b4-ac7d-45471f7255a1_model_rescue_evidence_line","type":"EvidenceLine","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/6dc65602-f61a-4959-acac-c246c6e74ee5","type":"EvidenceLine","dc:description":"Downgraded because hearing was never assessed in postnatal zebrafish and small ear size was not phenotype in humans with variant.","calculatedScore":2,"direction":"Supports","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/dbd31ddd-5702-4db6-ab40-78d4d965a4dd","type":"Finding","dc:description":"This resulted in significantly smaller ear size compared to WT HOMER2-injected embryos, and the number of kinocilia per neuromast was significantly decreased. These results suggest the pArg185Pro has a dominant-negative effect on protein function (not haploinsufficiency).","dc:source":"https://pubmed.ncbi.nlm.nih.gov/25816005","rdfs:label":"Azaiez Zebrafish","demonstrates":{"id":"cg:ProteinAlterationDisruptsOrganismFunction"}}],"specifiedBy":"GeneValidityNonHumanModelOrganismCriteria","strengthScore":1},{"id":"https://genegraph.clinicalgenome.org/r/7f5bd0fa-0c25-4b74-a12a-b346adc0bd55","type":"EvidenceLine","calculatedScore":2,"direction":"Supports","evidence":[{"id":"https://genegraph.clinicalgenome.org/r/ef245042-7bac-44df-851c-6a8dfc67fe70","type":"Finding","dc:description":"Homer2 -/- mice showed progressive hearing loss. ABoV thresholds were significantly lower compared to Homer2+/- and WT mice. Homer2-/- were profoundly deaf at all frequencies by P56. Immunolabeling of these mice showed no obvious hair cell death in cochleae in P56 Homer2-/-. Immunolabeling results indicate absence of Homer2 does not impair hair cell development, and hearing loss in knockout mice is not due to hair cell death. Hair bundle morphology data was not collected.","dc:source":"https://pubmed.ncbi.nlm.nih.gov/25816005","rdfs:label":"Azaiez Mouse","demonstrates":{"id":"cg:ProteinAlterationDisruptsOrganismFunction"}}],"specifiedBy":"GeneValidityNonHumanModelOrganismCriteria","strengthScore":2}],"specifiedBy":"GeneValidityOverallModelAndRescueEvidenceCriteria","strengthScore":3}],"specifiedBy":"GeneValidityOverallExperimentalEvidenceCriteria","strengthScore":4.5}],"evidenceStrength":"Moderate","sequence":1141,"specifiedBy":"GeneValidityCriteria7","strengthScore":9.5,"subject":{"id":"https://genegraph.clinicalgenome.org/r/KGRD9kybx4k","type":"GeneValidityProposition","disease":"obo:MONDO_0019497","gene":"hgnc:17513","modeOfInheritance":"obo:HP_0000006"},"version":"2.0","websiteLegacyID":"https://genegraph.clinicalgenome.org/r/assertion_9158c2a6-f11b-47b4-ac7d-45471f7255a1-","@context":{"@vocab":"https://genegraph.clinicalgenome.org/terms/","id":"@id","type":"@type","cg":"https://genegraph.clinicalgenome.org/terms/","dc":"http://purl.org/dc/terms/","obo":"http://purl.obolibrary.org/obo/","hgnc":"https://identifiers.org/hgnc:","rdfs":"http://www.w3.org/2000/01/rdf-schema#","cggv":"https://genegraph.clinicalgenome.org/r/gci/","evidenceStrength":{"@type":"@vocab"},"calculatedEvidenceStrength":{"@type":"@vocab"},"computedEvidenceStrength":{"@type":"@vocab"},"specifiedBy":{"@type":"@vocab"},"evidence":{"@container":"@set"},"disease":{"@type":"@vocab"},"gene":{"@type":"@vocab"},"phenotypes":{"@type":"@id"},"agent":{"@type":"@id"},"role":{"@type":"@vocab"},"mod